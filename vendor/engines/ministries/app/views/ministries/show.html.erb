<% content_for :body_content_title do %>
  <%= @ministry.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @ministry.title %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @ministry.description %>
    </p>
  </section>
  <section>
    <h1>Location</h1>
    <p>
      <%=raw @ministry.location %>
    </p>
  </section>
  <section>
    <h1>Webpage</h1>
    <p>
      <%=raw @ministry.webpage %>
    </p>
  </section>
  <section>
    <h1>Phone</h1>
    <p>
      <%=raw @ministry.phone %>
    </p>
  </section>
  <section>
    <h1>Email</h1>
    <p>
      <%=raw @ministry.email %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @ministry.image, nil %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="ministries">
      <% @ministries.each do |ministry| %>
        <li>
          <%= link_to ministry.title, ministry_url(ministry) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
