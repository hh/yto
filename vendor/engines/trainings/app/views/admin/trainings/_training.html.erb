<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(training) -%>">
  <span class='title'>
    <%= training.focus %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), training_url(training),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_training_path(training),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_training_path(training),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => training.focus),
        :method => :delete %>
  </span>
</li>
